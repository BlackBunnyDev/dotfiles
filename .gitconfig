[user]
    name = BlackBunnyDev
    email = blackbunnydev@gmail.com

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global

[color]
    ui = true

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    lg = log --oneline --graph --decorate --all

[credential]
    helper = cache --timeout=3600

[diff]
    tool = meld

[difftool]
    prompt = false
